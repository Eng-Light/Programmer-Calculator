<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProgrammerCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgrammerCalculator.ButtonChoice" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="fontFamily">@font/mulish_medium</item>
        <item name="android:background">@drawable/tab_button_background</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">@dimen/spacing_normal</item>
    </style>

    <style name="ProgrammerCalculator.Button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="fontFamily">@font/mulish_medium</item>
        <item name="android:paddingVertical">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProgrammerCalculator.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/colorTextSubTitle</item>
    </style>

    <style name="ProgrammerCalculator.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textSize">30sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColorHint">@color/colorTextNormal</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:background">@drawable/radius_8</item>
        <item name="android:backgroundTint">@color/colorTextViewBackground</item>
    </style>

    <style name="EditText.Binary" parent="ProgrammerCalculator.EditText">
        <item name="android:digits">"10.</item>
        <item name="android:hint">@string/binary_number</item>
    </style>

    <style name="EditText.Hexa" parent="ProgrammerCalculator.EditText">
        <item name="android:inputType">text</item>
        <item name="android:digits">"0123456789AaBbCcDdEeFf.</item>
        <item name="android:hint">@string/hexa_number</item>
    </style>

    <style name="EditText.Octal" parent="ProgrammerCalculator.EditText">
        <item name="android:digits">"012345678.</item>
        <item name="android:hint">@string/octa_number</item>
    </style>

    <style name="EditText.Decimal" parent="ProgrammerCalculator.EditText">
        <item name="android:digits">"0123456789.</item>
        <item name="android:hint">@string/decimal_number</item>
    </style>
</resources>